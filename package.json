  },
  "author": "Alpha Ng'ang'a",
  "scripts": {
    "start": "npm run build && SET NODE_ENV=production && pm2 start ./dist/bundle.js --name bbe-api-production",
    "build": "shx rm -rf ./dist && npx webpack --env.NODE_ENV=production --config webpack.config.js",
    "build-dev": "shx rm -rf ./dist && SET NODE_ENV=development &&  npx webpack --env.NODE_ENV=development --config webpack.config.js",
    "dev": " SET NODE_ENV=development && npm run build-dev",
    "test": "SET NODE_ENV=test mocha-webpack --recursive --glob \"*.test.ts\" --watch test",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
